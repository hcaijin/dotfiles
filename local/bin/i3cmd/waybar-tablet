#!/bin/sh

marker="${XDG_CACHE_HOME:-$HOME/.cache}/waybar-tablet"

show() {
    if [ -e "$marker" ]; then
        printf '{"text": " ï‹± ", "class": "on"}\n'
    else
        printf '{"text": ""}\n'
    fi
}

toggle() {
    if [ -e "$marker" ]; then
        swaymsg output eDP-1 transform 0
        rm -f "$marker"
    else
        swaymsg output eDP-1 transform 180
        touch "$marker"
    fi
    pkill -RTMIN+4 -x waybar
}

[ $# -gt 0 ] && toggle || show
